BoxLayout:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1  # Fondo oscuro
        Rectangle:
            size: self.size
            pos: self.pos

    Label:
        id: Screen
        text: ""
        font_size: 32
        size_hint_y: 0.2
        halign: "right"
        valign: "middle"
        color: 1, 1, 1, 1  # Texto blanco
        padding: [10, 20]

    GridLayout:
        cols: 4
        rows: 5
        spacing: 10  # Espaciado entre botones
        padding: [10, 10]  # Padding para el contorno del Grid

        # Botones
        Button:
            text: "("
            on_press: app.openPths()
            background_normal: ""
            background_color: 0.3, 0.3, 0.8, 1
            canvas.before:
                Color:
                    rgba: self.background_color
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [20]

        Button:
            text: ")"
            on_press: app.closePths()
            background_normal: ""
            background_color: 0.3, 0.3, 0.8, 1
            canvas.before:
                Color:
                    rgba: self.background_color
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [20]

        Button:
            text: "."
            on_press: app.addDot()
            background_normal: ""
            background_color: 0.3, 0.3, 0.8, 1
            canvas.before:
                Color:
                    rgba: self.background_color
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [20]

        Button:
            text: ","
