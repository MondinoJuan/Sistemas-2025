BoxLayout:
    orientation: 'vertical'
    padding: [15, 15, 15, 15]
    canvas.before:
        Color:
            rgba: 1.0, 0.820, 0.863, 1
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [30, 30, 30, 30]
        Color:
            rgba: 0.682, 0.933, 0.933, 1
        RoundedRectangle:
            size: [self.size[0] - 10, self.size[1] - 10]
            pos: [self.pos[0] + 5, self.pos[1] + 5]
            radius: [25, 25, 25, 25]

    Label:
        id: Screen
        text: ""
        font_size: 32
        size_hint_y: 0.2
        halign: "right"
        valign: "middle"
        text_size: self.width, None 
        color: 1, 1, 1, 1
        padding: [10, 20]
        canvas.before:
            Color:
                rgba: 0.05, 0.05, 0.05, 1
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [15, 15, 15, 15]

    GridLayout:
        cols: 4
        rows: 5
        spacing: 10
        padding: [10, 10]

        Button:
            text: "("
            on_press: app.openPths()
            background_normal: ""
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgba: 0.3, 0.3, 0.8, 1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [20, 20, 20, 20]

        Button:
            text: ")"
            on_press: app.closePths()
            background_normal: ""
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgba: 0.3, 0.3, 0.8, 1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [20, 20, 20, 20]

        Button:
            text: "."
            on_press: app.addDot()
            background_normal: ""
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgba: 0.3, 0.3, 0.8, 1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [20, 20, 20, 20]

        Button:
            text: ","
            on_press: app.addComa()
            background_normal: ""
            background_color: 0, 0, 0, 0
            canvas.before:
